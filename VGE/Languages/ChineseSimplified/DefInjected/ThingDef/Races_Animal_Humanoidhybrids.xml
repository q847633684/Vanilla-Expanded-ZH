  <GR_Manwolf.tools.left_claw.label>左爪</GR_Manwolf.tools.left_claw.label>
  <!-- EN: right claw -->
  <GR_Manwolf.tools.right_claw.label>右爪</GR_Manwolf.tools.right_claw.label>
  <!-- EN: head -->
  <GR_Manwolf.tools.head.label>头</GR_Manwolf.tools.head.label>
  
